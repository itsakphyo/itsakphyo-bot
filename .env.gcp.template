# Google Cloud Platform Configuration Template
# Copy this file to .env.gcp and update the values for local development

# For Google Cloud Run deployment
PORT=8080
HOST=0.0.0.0

# Bot Configuration - Set these in GCP Secret Manager or environment variables
TOKEN=your_bot_token_here
BOT_USERNAME=your_bot_username_here

# GCP Configuration - These will be auto-configured
WEBHOOK_URL=
WEBHOOK_PATH=/webhook
ENVIRONMENT=production

# Security
SECRET_KEY=change-this-in-production

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# CORS - Allow all origins for public bot access
CORS_ORIGINS=["*"]
ALLOWED_HOSTS=["*"]
